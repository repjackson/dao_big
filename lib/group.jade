template(name='group_card')                    
    a.ui.card(href="/group/#{_id}") 
        img.ui.image(src="{{c.url image_id width=400 height=300 crop='pad'}}")
        .content 
            .ui.header 
                |#{title}
            i.grey.tag.icon
            each tags
                .ui.small.label #{this}
            if location_tags
                i.grey.marker.icon
                each location_tags
                    .ui.small.label #{this}
            if people_tags
                i.grey.marker.icon
                each people_tags
                    .ui.small.label #{this}


                
template(name='group_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column
                    .ui.inline.header
                        i.pencil.icon
                        | #{title}
                        small group
                    a.ui.large.icon.green.button(href="/group/#{_id}/" title='save product')
                        i.checkmark.big.icon
                    +text_edit key='title' label='title' direct=true
                    +image_edit key='image_id' label='image' direct=true
                    div
                .ten.wide.column
                    .ui.header members
                    .ui.header
                        i.fork.icon
                        |parent groups
                    each nonparent_groups
                        .ui.button.add_parent
                            i.plus.icon
                            |#{title}
                    each parent_groups
                        .ui.segment
                            .ui.header #{title}
                            i.circular.minus.link.icon.remove_parent_group
                    .ui.header child groups
                    each child_groups
                        .ui.header #{title}
                    
                    div
                    // +html_edit key='directions' label='directions' direct=true
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                    .ui.red.button.delete_group
                        i.remove.icon   
                        | delete
                
                
template(name='group_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    a.ui.basic.icon.button(href="/groups")
                        i.users.circle.large.icon
                    .ui.inline.header
                        | #{title}
                        small group view
                    +image_view key='image_id' label='image' direct=true
                    div
                    a.ui.icon.button(href="/group/#{_id}/edit")
                        i.pencil.icon
                .eight.wide.column
                    .ui.header 
                        +i name='shopping-cart'
                        |products
                    .ui.large.selection.link.animated.list
                        each group_products
                            .item 
                                a.ui.header(href="/product/#{_id}") #{title}
                    .ui.header 
                        +i name='groups'
                        |members
                    .ui.large.selection.link.animated.list
                        each group_members
                            .item 
                                .ui.header #{title}
                    .ui.header 
                        i.fork.icon
                        |parent groups
                    .ui.large.selection.link.animated.list
                        each parent_groups
                            .item 
                                a.ui.header(href="/group/#{_id}") #{title}
                    +comments
                .four.wide.column
                    div
                    +html_view key='description' label='description' direct=true
                    if in_dev
                        +print_this