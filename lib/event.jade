template(name='events')
    .ui.stackable.padded.grid
        .four.wide.column
            .ui.inline.header 
                i.large.fire.icon
                |events
            i.plus.circular.link.icon.add_event
            div
            .ui.inline.small.header
                i.tag.icon
                |tags
            each picked_event_tags
                a.ui.blue.label.unpick_event_tag
                    |#{this}
            each event_tag_results
                if title
                    a.ui.circular.small.link.label.pick_event_tag
                        |#{title} 
                        small.ui.grey.text #{count}
        .twelve.wide.column
            span.sorting_row
                // +session_set key='view_users' value='grid' icon='th' 
                // +session_set key='view_users' value='list' icon='list'
                // +session_set key='sort_users_direction' value='-1' icon='chevron down'
                // +session_set key='sort_users_direction' value='1' icon='chevron up'
                // +session_set key='sort_users_key' value='points' icon='coins'
                // +session_set key='sort_users_key' value='created_date' icon='clock'
                // +session_set key='view_limit' value=1
                +search_input model='event' field='title'
                i.large.sort.icon
                .ui.compact.icon.button.set_sort_direction(title='toggle sort direction')
                    if sorting_up
                        i.sort.amount.down.icon
                    else
                        i.sort.amount.up.icon
                |&nbsp;
                |&nbsp;
                .spacer 
        
            span.ui.doubling.cards.scrolling
                each event_docs
                    +event_card
                 
                 

template(name='event_card')
    a.ui.card.fly_left(href="/event/#{_id}") 
        img.ui.image(src="{{c.url image_id width=400 height=300 crop='pad'}}")
        .content 
            .ui.inline.header 
                |#{title}
            i.grey.tag.icon
            each tags
                .ui.small.label #{this}
            if location_tags
                i.grey.marker.icon
                each location_tags
                    .ui.small.label #{this}
            if people_tags
                i.grey.marker.icon
                each people_tags
                    .ui.small.label #{this}


                
template(name='event_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column
                    .ui.inline.header
                        i.pencil.icon
                        | #{title}
                        small event
                    a.ui.large.icon.green.button.fly_up(href="/event/#{_id}/" title='save product')
                        i.checkmark.big.icon
                    +text_edit key='title' label='title' direct=true
                    +image_edit key='image_id' label='image' direct=true
                    div
                    if in_dev 
                        +print_this
                    +html_edit key='description' label='description' direct=true
                .ten.wide.column
                    +text_edit key='location' label='location' icon='marker' direct=true
                    +datetime_edit key='start_datetime' label='start datetime' icon='calendar' direct=true
                    +datetime_edit key='end_datetime' label='end datetime' icon='calendar' direct=true
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                    +array_edit key='location_tags' label='location tags' icon='marker' direct=true
                    .ui.red.button.delete_event
                        i.remove.icon   
                        | delete
                
                    

template(name='event_view')     
    .ui.stackable.padded.three.column.grid
        .column
            .ui.inline.header start #{title}
            .ui.inline.header start #{start_datetime}
            .ui.inline.header end #{end_datetime}
            .ui.inline.header 
                i.marker.icon
                |location #{location}
            // if can_join
        .column
            +comments