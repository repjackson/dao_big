                |posts
            .ui.basic.icon.button.add_post
                i.large.plus.icon
            div
            .ui.inline.small.header
                i.tag.icon
                |tags
            each picked_post_tags
                a.ui.blue.label.unpick_post_tag
                    |#{this}
            each post_tag_results
