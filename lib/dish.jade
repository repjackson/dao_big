template(name='dish_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column
                    .ui.inline.header
                        i.pencil.icon
                        | #{title}
                        small dish
                    a.ui.large.icon.green.button(href="/dish/#{_id}/" title='save product')
                        i.checkmark.big.icon
                    +text_edit key='title' label='title' direct=true
                    +image_edit key='image_id' label='image' direct=true
                    div
                .ten.wide.column
                    div
                    +html_edit key='description' label='description' direct=true
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                    +array_edit key='ingredients' label='ingredients' icon='tags' direct=true
                    .ui.red.button.delete_dish
                        i.remove.icon   
                        | delete
                
                
template(name='dish_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    a.ui.basic.icon.button(href="/dishes")
                        +i name='cookbook'
                    .ui.inline.header
                        | #{title}
                        small dish view
                    +image_view key='image_id' label='image' direct=true
                    div
                    a.ui.icon.button(href="/dish/#{_id}/edit")
                        i.pencil.icon
                    .ui.header 
                        +i name='ingredients'
                        |ingredients
                    .ui.large.selection.link.animated.list
                        each ingredients
                            .item 
                                .ui.header #{title}
                .six.wide.column
                    +array_view key='ingredients' label='ingredients' icon='ingredients' direct=true
                    // +array_view key='tags' label='tags' icon='tags' direct=true
                    .ui.header 
                        +i name='popular-topic' cl='ui inline image'
                        |reviews
                    each dish_reviews
                        .ui.header #{when}
                    +comments
                .six.wide.column
                    div
                    +html_view key='description' label='description' direct=true
                    +voting_full