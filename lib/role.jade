template(name='role_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column
                    .ui.inline.header
                        i.pencil.icon
                        | #{title}
                        small role
                    a.ui.large.icon.green.button(href="/role/#{_id}/" title='save product')
                        i.checkmark.big.icon
                    +text_edit key='title' label='title' direct=true
                    +image_edit key='image_id' label='image' direct=true
                    div
                .ten.wide.column
                    div
                    // +html_edit key='directions' label='directions' direct=true
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                    .ui.red.button.delete_role
                        i.remove.icon   
                        | delete
                
                
template(name='role_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    a.ui.basic.icon.button(href="/roles")
                        i.shield.large.icon
                    .ui.inline.header
                        | #{title}
                        small role view
                    +image_view key='image_id' label='image' direct=true
                    div
                    a.ui.icon.button(href="/role/#{_id}/edit")
                        i.pencil.icon
                .eight.wide.column
                    .ui.header 
                        i.users.icon
                        |people
                    .ui.large.selection.link.animated.list
                        each people_in_roles
                            .item 
                                a.ui.header(href="/user/#{") #{title}
                    div
                    .ui.inline.header 
                        i.tasks.icon
                        |tasks
                    i.circular.plus.link.icon.add_role_task
                    .ui.large.selection.link.animated.list
                        each role_tasks
                            .item 
                                a.ui.header(href="/user/#{") #{title}
                    +comments
                .four.wide.column
                    div
                    +html_view key='description' label='description' direct=true
