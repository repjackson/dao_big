template(name='product_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column
                    .ui.inline.header
                        i.pencil.icon
                        | #{title}
                        small product
                    .ui.large.icon.green.button.save_product.fly_up(title='save product')
                        i.checkmark.big.icon   
                    +text_edit key='title' label='title' direct=true
                    +image_edit key='image_id' label='image' direct=true
                    div
                    +boolean_edit key='dynamic_pricing' label='dynamic pricing' direct=true
                    if dynamic_pricing
                        |how much price changes based on sales in the last day
                        +number_edit key='dynamic_pricing_increment' label='dynamic pricing increment (pts)' unit='points' direct=true
                .ten.wide.column
                    div
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                    +array_edit key='location_tags' label='location tags' icon='marker' direct=true
                    +html_edit key='description' label='description' direct=true
                    +boolean_edit key='is_food' label='is food' icon='food' direct=true
                    if is_food
                        // +boolean_edit key='has_calories' label='has calories' direct=true
                        +array_edit key='ingredients' label='ingredients' direct=true
                        +number_edit key='fat_grams' label='fat grams' direct=true
                        +number_edit key='serving_size' label='serving size' direct=true
                        +number_edit key='calories' label='calories' direct=true
                    +boolean_edit key='buy_it_now' label='buy it now' direct=true
                    // if buy_it_now
                    div
                    +number_edit key='price_usd' label='$ price' direct=true
                    div
                    +number_edit key='price_points' label='price (points)' direct=true
                    +boolean_edit key='is_auction' label='auction' direct=true
                    if is_auction
                        +number_edit key='minimum_bid' label='minimum bid' direct=true
                        +datetime_edit key='end_datetime' label='end datetime' direct=true
                    if can_delete
                        .ui.red.button.delete_product
                            i.remove.icon   
                            | delete
                            
                            
                            
                            
