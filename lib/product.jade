template(name='product_layout')
    +nav
    .ui.bottom.attached.pushable.segment
        // +topbar
        +left_sidebar
        +right_sidebar
        // +cartbar
        // +walletbar
        // +secnav
        with current_doc
            .ui.stackable.padded.grid
                .row
                    .six.wide.column
                        a.ui.basic.icon.button.fly_left(href="/products")
                            i.large.shop.icon
                        .ui.large.inline.header 
                            //- small viewing
                            | #{title}
                            //- small product
                        if dynamic_pricing
                            .ui.small.header
                                i.calculator.icon(title='dynamic pricing')
                                |dynamic pricing (=/- #{dynamic_pricing_increment}pts)
                        a.zoomer(href="https://www.google.com/search?q=#{title}" title='search google for product' target='_blank')
                            i.google.link.grey.icon
                        a.zoomer(href="https://www.amazon.com/s?k=#{title}" title='search amazon for product' target='_blank')
                            i.amazon.link.grey.icon
                        if can_edit
                            a.fly_down(href="/product/#{_id}/edit")
                                i.pencil.blue.large.circular.link.icon
                        // a(href="{{c.url image_id}}" target="_window")
                        div 
                        // +text_view key='size_description' label='size description'  direct=true
                        // +link_view key='product_link' label='link' icon='wordpress' direct=true
                        .ui.list
                            .item #{calories} calories
                            a.ui.large.item.zoomer(href="/group/#{group_doc._id}") 
                                if group_doc.image_id
                                    img.ui.avatar.image.zoomer(src="{{c.url group_doc.image_id}}")
                                else
                                    i.fire.icon
                                |#{group_doc.title}
                                small group
                            .ui.item 
                                i.eye.icon
                                |#{views}
                                |views
                            .ui.item
                                |curent point price $#{price_usd}
                            .ui.item
                                |core usd price $#{price_usd}
                            .ui.item
                                |core point price #{price_points}p
                            
                        div
                        +voting_full
                        +html_view key='description' direct=true
                        +array_view key='tags' label='tags' icon='tags' direct=true
                        a.ui.inline.header(href="/group/#{group_id}")
                            |#{group_doc._title}
                        img.ui.rounded.fluid.image.zoomer(src="{{c.url image_id}}")
                    .ten.wide.column
                        .ui.green.big.button.record_order.fly_right
                            i.send.big.icon
                            |buy for #{price_points}p
                        // div
                        a.ui.basic.button(href="/product/#{_id}/timeline" class="{{isActiveRoute 'product_timeline'}}")
                            i.line.chart.icon
                            |timeline
                        a.ui.basic.button(href="/product/#{_id}/orders" class="{{isActiveRoute 'product_orders'}}")
                            i.money.icon
                            |orders
                        a.ui.basic.button(href="/product/#{_id}/reviews" class="{{isActivePath '/tasks'}}")
                            i.bullhorn.icon
                            |reviews
                        a.ui.basic.button(href="/product/#{_id}/description" class="{{isActivePath '/tasks'}}")
                            i.content.icon
                            |description
                        // a.ui.basic.button(href="/product/#{_id}/comments" class="{{isActivePath '/tasks'}}")
                        //     i.chat.icon
                        //     |comments
                        a.ui.basic.button(href="/product/#{_id}/leaderboard" class="{{isActivePath '/tasks'}}")
                            i.certificate.icon
                            |leaderboard
                        +yield
                        +comments
                    
