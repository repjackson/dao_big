template(name='user_layout')
    +nav
    .ui.bottom.attached.pushable.segment
        +topbar
        +left_sidebar
        +right_sidebar
        // +cartbar
        // +walletbar
        // +secnav
        with user_from_username_param
            .ui.stackable.padded.grid.global_conainer.pusher
                .row
                    //- img.ui.image.checkin_banner(src="{{c.url banner_image width=1000 height=1000 crop='crop'}}")
                    .four.wide.column
                        a.item.mobile.hidden(href="/user/#{username}")
                            img.ui.centered.rounded.image(src="{{c.url image_id height=300 width=300 gravity='face' crop='fill'}}")
                        .spacer
                        a(href="/user/#{username}")
                            .ui.center.aligned.header
                                | #{username}
                        .ui.two.column.middle.aligned.grid.mobile.only
                            .column
                                img.ui.small.inline.image.mobile.only(src="{{c.url image_id height=300 width=300 gravity='face' crop='fill'}}")
                            .column
                                .ui.inline.header
                                    strong #{username}
                        if is_current_user
                            a.ui.basic.circular.icon.button(href="/user/#{user_from_username_param.username}/edit" title='profile settings')
                                i.cog.icon
                        if is_current_user
                            .ui.basic.button.logout
                                i.sign.out.alternate.icon
                                |log out
                        unless is_current_user
                            +friend_button
                    .twelve.wide.column
                        a.ui.basic.button(href="/user/#{username}" class="{{isActiveRoute 'user_dashboard'}}")
                            i.dashboard.icon
                            |dashboard
                        a.ui.basic.button(href="/user/#{username}/requests" class="{{isActiveRoute 'user_requests'}}")
                            i.bullhorn.icon
                            |requests
                        a.ui.basic.button(href="/user/#{username}/work" class="{{isActiveRoute 'user_work'}}")
                            i.wrench.icon
                            |work
                        a.ui.basic.button(href="/user/#{username}/groups" class="{{isActiveRoute 'user_groups'}}")
                            i.wrench.icon
                            |groups
                        a.ui.basic.button(href="/user/#{username}/sent" class="{{isActiveRoute 'user_sent'}}")
                            i.wrench.icon
                            |sent
                        div.global_container
                            .spacer
                            +yield


template(name='user_dashboard')
    with current_user
        .ui.header #{points} points
    unless is_current_user
        .ui.button.send_points
            |send points
    +user_requests
    +user_quicklist
    +user_menu
    
    
template(name='friend_button')
    if is_friend
        .ui.blue.button.unfriend
            // .visible.content
            |friends
            // .hidden.content
            //     i.minus.icon
    else 
        .ui.button.friend
            |+ friend
        
    
    
template(name='user_requests')  
    .ui.header #{user_from_username_param.name} requests
template(name='user_groups')  
    .ui.header #{user_from_username_param.name} groups
template(name='user_quicklist')    
    .ui.header #{user_from_username_param.name} quicklist
template(name='user_menu')    
    .ui.header #{user_from_username_param.name} menu
    
