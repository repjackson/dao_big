template(name='porters')
    .ui.stackable.padded.grid
        .sixteen.wide.column
            .ui.inline.header
                i.hand.holding.icon
                |porters
            .ui.button.add_porter_task
                i.plus.icon
                |add task
            +session_toggle key='admin_mode' icon='shield'
            .ui.header 
                i.tasks.icon
                |tasks
            .ui.doubling.cards
                each porter_tasks
                    .ui.card.log_work
                        .content
                            img.ui.image.request_item.pointer(src="{{c.url image_id width=500 height=500 gravity='face' crop='fill'}}")
                            .ui.header #{title}
                            if session_is 'admin_mode' true
                                a.ui.icon.button(href="/task/#{_id}/edit")
                                    i.pencil.icon
    
    
    