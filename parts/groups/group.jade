template(name='group_card')
    .ui.fluid.segment.stackable.grid
        a.four.wide.column(href="/group/#{_id}")
            if image_id
                img.ui.fluid.image(src="{{c.url image_id}}")
        .twelve.wide.column
            a.ui.header(href="/group/#{_id}")
                |#{title}
            |#{member_ids.length} members
            |!{description}
            //- +ismall name='tags' cl='ui inline image'
            each tags
                .ui.basic.label #{this}
            div
            if is_admin
                .ui.small.header slug: #{slug}
            if can_edit
                a.ui.circular.basic.icon.button(href="/group/#{_id}/edit")
                    i.pencil.blue.icon


template(name='group_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    a.ui.fluid.basic.button(href="/groups")
                        i.left.chevron.icon
                        +i name='wrench' cl='ui inline avatar image'
                        |groups
                    .ui.header view group
                    if can_edit
                        a.ui.big.fluid.button(href="/group/#{_id}/edit")
                            i.pencil.icon
                            |edit
                    +image_view key='image_id' label='image' direct=true
                    +voting_full
                    +viewing
                .eight.wide.column
                    .ui.header #{title} 
                    +textarea_view key='description' icon='content' label='description' direct=true
                    +array_view key='location_tags' label='location tags' icon='marker' direct=true
                    +array_view key='tags' label='tags' icon='tags' direct=true
                    +text_view key='contact_info' label='contact info' icon='info' direct=true
                    div
                    +comments
                .four.wide.column 
                    div
                    +group_history
                    //- +group_subscription
                    //- +multi_user_view key='associated_members' label='associated members' icon='groups' direct=true

                    
                
template(name='group_history')
    +ismall name='rss'
    .ui.inline.header
        |activity
    .ui.list
        each group_events
            .item #{text} #{when}
            
template(name='group_subscription')
    //- +ismall name='renew-subscription'
    //- .ui.inline.header
    //-     |subscription settings
    .ui.button.subscribe subscribe to updates
    .ui.list
        each subscribers
            .item #{text} #{when}
            
template(name='group_reservations')
    .ui.header
        +ismall name='invoice'
        |group reservations
    .ui.button.new_reservation
        |new reservation
    each reservations
        .ui.segment
            .ui.header #{when}
            .ui.header by #{_author_username}
            +view_button
            +edit_button


template(name='group_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    .ui.header 
                        |edit group
                    a.ui.big.fluid.green.button(href="/group/#{_id}" title='save')
                        i.checkmark.large.icon
                        | save
                    +remove_button
                    +image_edit key='image' label='image' direct=true
                .eight.wide.column 
                    +text_edit key='title' direct=true
                    +html_edit key='description' label='content' icon='content' direct=true
                .four.wide.column
                    +single_user_edit key='leader' label='leader' direct=true
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                    +array_edit key='location_tags' label='location tags' icon='marker' direct=true
                    +text_edit key='contact_info' label='contact info' icon='info' direct=true
                    +multi_user_edit key='member_ids' label='members' direct=true
                    +boolean_edit key='private' label='private' direct=true