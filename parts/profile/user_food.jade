template(name='user_food')
    .scrolling
        each food 
            +profile_food_item

template(name='profile_food_item')
    .ui.segment.grid
        .row
            .four.wide.column
                +image_view key='image_id' direct=true cl='zoom ui tiny image'
            .twelve.wide.column
                .ui.header #{title}
                a.ui.small.header.inline.lowercase(href="/food/#{_id}/view")
                    |#{price_per_serving}c / #{serving_unit}
                .ui.small.inline.header #{when}
                a.ui.button(href="/food/#{_id}/view")
                    |view
                    i.right.chevron.icon
                if is_admin
                    +remove_button
